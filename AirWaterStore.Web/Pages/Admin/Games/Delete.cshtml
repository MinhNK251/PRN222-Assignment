@page "{id:int}"
@using AirWaterStore.Web.Helper
@model AirWaterStore.Web.Pages.Admin.Games.DeleteModel
@{
    ViewData["Title"] = "Delete Game";
}

<div class="container mt-5">

    <h1 class="text-center mb-4 text-danger">Delete Game</h1>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="alert alert-danger shadow-sm">
                <h5 class="mb-1">⚠️ Are you sure you want to delete this game?</h5>
                <p class="mb-0">This action cannot be undone.</p>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">@Model.Game.Title</dd>

                        <dt class="col-sm-4">Genre</dt>
                        <dd class="col-sm-8">@(Model.Game.Genre ?? "N/A")</dd>

                        <dt class="col-sm-4">Developer</dt>
                        <dd class="col-sm-8">@(Model.Game.Developer ?? "N/A")</dd>

                        <dt class="col-sm-4">Publisher</dt>
                        <dd class="col-sm-8">@(Model.Game.Publisher ?? "N/A")</dd>

                        <dt class="col-sm-4">Release Date</dt>
                        <dd class="col-sm-8">@(Model.Game.ReleaseDate?.ToString("MMMM dd, yyyy") ?? "N/A")</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">@Model.Game.Price.ToString("C", Currency.VnCurrencyFormat)</dd>

                        <dt class="col-sm-4">Quantity</dt>
                        <dd class="col-sm-8">@Model.Game.Quantity</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@(Model.Game.Description ?? "N/A")</dd>
                    </dl>
                </div>
            </div>        

            <form method="post" class="d-flex justify-content-between">
                <input type="hidden" asp-for="ThumbnailUrl" />
                <a asp-page="/Games/Details" asp-route-id="@Model.Game.GameId" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>

        </div>
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.Game?.ThumbnailUrl))
            {
                <div class="card">
                    <div class="card-header">
                        <h5>Game Thumbnail</h5>
                    </div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Game.ThumbnailUrl" />
                        <img src="@Model.Game.ThumbnailUrl" class="img-fluid" alt="@Model.Game.Title" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

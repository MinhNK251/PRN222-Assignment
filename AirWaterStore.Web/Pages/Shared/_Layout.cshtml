@using AirWaterStore.Web.Helper
@{
    var userId = Context.Session.GetInt32(SessionParams.UserId);
    var username = Context.Session.GetString(SessionParams.UserName);
    var userRole = Context.Session.GetInt32(SessionParams.UserRole);
    var isAuthenticated = userId.HasValue;
    var isStaff = userRole == 2;
    var isCustomer = userRole == 1;

    // Get cart count
    var cartItems = Context.Session.GetObjectFromJson<List<AirWaterStore.Web.Pages.Games.CartItem>>("Cart") ?? new
    List<AirWaterStore.Web.Pages.Games.CartItem>();
    var cartCount = cartItems.Sum(c => c.Quantity);
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AirWaterStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AirWaterStore.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>

<body class="bg-light">
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm"
             style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding-top: .3rem; padding-bottom: .3rem;">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand fw-bold fs-5 text-white py-0" asp-area="" asp-page="/Games/Index">
                    <i class="fas fa-gamepad me-1"></i> AirWaterStore
                </a>

                <!-- Toggler -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav links -->
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 small">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold px-2 py-1 nav-link-custom" asp-area="" asp-page="/Games/Index">
                                <i class="fas fa-store me-1"></i> Games
                            </a>
                        </li>
                        @if (isAuthenticated)
                        {
                            @if (isCustomer)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-semibold px-2 py-1 nav-link-custom" asp-area="" asp-page="/Orders/Index">
                                        <i class="fas fa-history me-1"></i> My Orders
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-semibold px-2 py-1 nav-link-custom" asp-area="" asp-page="/Chat/Index">
                                        <i class="fas fa-comments me-1"></i> Support Chat
                                    </a>
                                </li>
                            }
                            @if (isStaff)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-semibold px-2 py-1 nav-link-custom" asp-page="/Admin/Users/Index">
                                        <i class="fas fa-user-cog me-1"></i> Users
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-semibold px-2 py-1 nav-link-custom" asp-page="/Orders/Index">
                                        <i class="fas fa-clipboard-list me-1"></i> Orders
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-semibold px-2 py-1 nav-link-custom" asp-page="/Admin/Chat/Index">
                                        <i class="fas fa-comments me-1"></i> Support Chat
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-semibold px-2 py-1 nav-link-custom" asp-page="/Admin/Dashboard">
                                        <i class="fas fa-tachometer-alt me-1"></i> Dashboard
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <!-- Right side -->
                    <ul class="navbar-nav align-items-center small">
                        @if (isAuthenticated)
                        {
                            @if (isCustomer)
                            {
                                <li class="nav-item me-2">
                                    <a class="nav-link text-white position-relative nav-link-custom px-2 py-1" asp-area="" asp-page="/Cart">
                                        <i class="fas fa-shopping-cart fs-6"></i>
                                        @if (cartCount > 0)
                                        {
                                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                                @cartCount
                                            </span>
                                        }
                                    </a>
                                </li>
                            }
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white fw-semibold px-2 py-1 nav-link-custom" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i> @username
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0 small">
                                    <li><a class="dropdown-item" asp-page="/Profile"><i class="fas fa-user me-2"></i>Profile</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-page="/Logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-1">
                                <a class="btn btn-outline-light btn-sm fw-semibold px-2 py-1" asp-area="" asp-page="/Login">
                                    <i class="fas fa-sign-in-alt me-1"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-light btn-sm fw-semibold px-2 py-1" asp-area="" asp-page="/Register">
                                    <i class="fas fa-user-plus me-1"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid px-0">
        <main role="main" class="min-vh-100">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light py-4 mt-1">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="fw-bold mb-3 text-white">
                        <i class="fas fa-gamepad me-2"></i>AirWaterStore
                    </h5>
                    <p class="text-white">Your ultimate destination for premium gaming experiences. Discover, purchase, and enjoy the best games in the market.</p>
                </div>
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3 text-white">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="/Games/Index" class="text-white text-decoration-none">Games</a></li>
                        <li><a href="/Orders/Index" class="text-white text-decoration-none">Orders</a></li>
                        <li><a href="/Chat/Index" class="text-white text-decoration-none">Support</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Connect</h6>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-white fs-5"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-white fs-5"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-white fs-5"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white fs-5"><i class="fab fa-discord"></i></a>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0 text-white">&copy; 2025 - AirWaterStore. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-area="" asp-page="/Privacy" class="text-white text-decoration-none">Privacy Policy</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
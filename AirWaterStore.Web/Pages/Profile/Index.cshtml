@page
@using AirWaterStore.Web.Helper
@model AirWaterStore.Web.Pages.Profile.IndexModel
@{
    ViewData["Title"] = "My Profile";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-4 fw-bold mb-4">
                    <i class="fas fa-user-circle me-3"></i>My Profile
                </h1>
                <p class="lead mb-0">Manage your account and view your gaming activity</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <!-- Profile Info -->
        <div class="col-md-4">
            <div class="card shadow-custom border-0 mb-4">
                <div class="card-body text-center p-4">
                    <div class="profile-avatar mb-3">
                        <i class="fas fa-user-circle fa-5x text-primary"></i>
                    </div>
                    <h4 class="fw-bold mb-1">@Model.User.Username</h4>
                    <p class="text-muted mb-3">@Model.User.Email</p>
                    <span class="badge badge-primary px-3 py-2">
                        @UserRole.GetRoleName(Model.User.Role)
                    </span>
                </div>
            </div>
        </div>

        <!-- Activity Summary -->
        <div class="col-md-8">
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <div class="card bg-gradient-primary text-white border-0 shadow-custom">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-shopping-bag fa-2x mb-3 opacity-75"></i>
                            <h3 class="fw-bold mb-1">@Model.TotalOrders</h3>
                            <p class="mb-0 opacity-75">Total Orders</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-gradient-pink text-white border-0 shadow-custom">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-heart fa-2x mb-3 opacity-75"></i>
                            <h3 class="fw-bold mb-1">@Model.WishlistCount</h3>
                            <p class="mb-0 opacity-75">Wishlist Items</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-gradient-success text-white border-0 shadow-custom">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-star fa-2x mb-3 opacity-75"></i>
                            <h3 class="fw-bold mb-1">@Model.ReviewCount</h3>
                            <p class="mb-0 opacity-75">Reviews Written</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow-custom border-0">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-bolt me-2 text-primary"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <a asp-page="/Orders/Index" class="btn btn-outline-primary w-100 py-3">
                                <i class="fas fa-history me-2"></i>View Order History
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-page="/Wishlist/Index" class="btn btn-outline-danger w-100 py-3">
                                <i class="fas fa-heart me-2"></i>View Wishlist
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-page="/Games/Index" class="btn btn-outline-success w-100 py-3">
                                <i class="fas fa-store me-2"></i>Browse Games
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-page="/Chat/Index" class="btn btn-outline-info w-100 py-3">
                                <i class="fas fa-comments me-2"></i>Support Chat
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
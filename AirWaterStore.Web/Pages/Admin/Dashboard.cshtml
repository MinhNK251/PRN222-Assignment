@page
@using AirWaterStore.Web.Helper
@model AirWaterStore.Web.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1 class="text-center mb-4">Admin Dashboard</h1>

<!-- Month/Year Selection Form -->
<form method="get" class="mb-4">
    <div class="form-row align-items-end">
        <div class="col-md-3">
            <label asp-for="SelectedMonth" class="form-label">Select Month</label>
            <select asp-for="SelectedMonth" class="form-control">
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i" selected="@(i == Model.SelectedMonth)">
                        @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)
                    </option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label asp-for="SelectedYear" class="form-label">Select Year</label>
            <select asp-for="SelectedYear" class="form-control">
                @for (int i = 2020; i <= DateTime.Now.Year; i++)
                {
                    <option value="@i" selected="@(i == Model.SelectedYear)">@i</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </div>
</form>

<!-- Display Statistics -->
<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Total Revenue</div>
            <div class="card-body">
                <h5 class="card-title">@Model.TotalRevenue.ToString("C", Currency.VnCurrencyFormat)</h5>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-secondary mb-3">
            <div class="card-header">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Model.SelectedMonth) - @Model.SelectedYear Revenue</div>
            <div class="card-body">
                <h5 class="card-title">@Model.TotalRevenue.ToString("C", Currency.VnCurrencyFormat)</h5>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-header">Year @Model.SelectedYear Revenue</div>
            <div class="card-body">
                <h5 class="card-title">@Model.TotalRevenue.ToString("C", Currency.VnCurrencyFormat)</h5>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Total Games</div>
            <div class="card-body">
                <h5 class="card-title">@Model.TotalGames</h5>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-header">Total Orders</div>
            <div class="card-body">
                <h5 class="card-title">@Model.TotalOrders</h5>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-dark mb-3">
            <div class="card-header">Total Users</div>
            <div class="card-body">
                <h5 class="card-title">@Model.TotalUsers</h5>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-danger mb-3">
            <div class="card-header">Pending Chats</div>
            <div class="card-body">
                <h5 class="card-title">@Model.PendingChats</h5>
            </div>
        </div>
    </div>
</div>

<!-- Top 5 Sections -->
<div class="row mt-4">
    <div class="col-md-3">
        <h3 class="text-center">Top 5 Selling Games</h3>
        <ul class="list-group">
            @foreach (var game in Model.TrendingGames)
            {
                <li class="list-group-item">
                    <a asp-page="/Games/Details" asp-route-id="@game.GameId">
                        <strong>@game.Title</strong>
                    </a> - Total Orders: @game.TotalOrders
                </li>
            }
        </ul>
    </div>

    <div class="col-md-3">
        <h3 class="text-center">Top 5 Most-Wishlisted Games</h3>
        <ul class="list-group">
            @foreach (var game in Model.TopWishlistGames)
            {
                <li class="list-group-item">
                    <a asp-page="/Games/Details" asp-route-id="@game.GameId">
                        @game.Title
                    </a> - @game.WishlistCount users
                </li>
            }
        </ul>
    </div>

    <div class="col-md-3">
        <h3 class="text-center">Top 5 Commission Requests</h3>
        <ul class="list-group">
            @foreach (var request in Model.TopCommissionRequests)
            {
                <li class="list-group-item">
                    <strong>@request.GameTitle</strong> - Expected Price: @request.ExpectedPrice, Upvotes: @request.Upvotes
                </li>
            }
        </ul>
    </div>

    <div class="col-md-3">
        <h3 class="text-center">Low Stock Games</h3>
        <ul class="list-group">
            @foreach (var game in Model.LowStockGames)
            {
                <li class="list-group-item">
                    <a asp-page="/Games/Details" asp-route-id="@game.GameId">
                        <strong>@game.Title</strong>
                    </a> - Quantity: @game.Quantity
                </li>
            }
        </ul>
    </div>
</div>

<!-- Recent Orders -->
<div class="row mt-4">
    <div class="col-md-6">
        <h3>Recent Orders</h3>
        @if (Model.RecentOrders.Any())
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Order #</th>
                        <th>Customer</th>
                        <th>Total</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.RecentOrders)
                    {
                        <tr>
                            <td>
                                <a asp-page="/Orders/Details" asp-route-id="@order.OrderId">#@order.OrderId</a>
                            </td>
                            <td>@Model.GetUsername(order.UserId)</td>
                            <td>@order.TotalPrice.ToString("C", Currency.VnCurrencyFormat)</td>
                            <td>
                                <span class="badge badge-@(order.Status == "Completed" ? "success" : "warning") text-dark">
                                    @order.Status
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No recent orders.</p>
        }
    </div>

    <div class="col-md-6">
        <h3>Quick Actions</h3>
        <div class="list-group">
            <a asp-page="/Admin/Games/Create" class="list-group-item list-group-item-action">
                <i class="fas fa-plus"></i> Add New Game
            </a>
            <a asp-page="/Games/Index" class="list-group-item list-group-item-action">
                <i class="fas fa-gamepad"></i> Manage Games
            </a>
            <a asp-page="/Admin/Users/Index" class="list-group-item list-group-item-action">
                <i class="fas fa-users"></i> Manage Users
            </a>
            <a asp-page="/Orders/Index" class="list-group-item list-group-item-action">
                <i class="fas fa-shopping-cart"></i> View All Orders
            </a>
            <a asp-page="/Admin/Chat/Index" class="list-group-item list-group-item-action">
                <i class="fas fa-comments"></i> Support Chat Dashboard
            </a>
        </div>
    </div>
</div>

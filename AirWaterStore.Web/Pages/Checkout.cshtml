@page
@model AirWaterStore.Web.Pages.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (Model.CartItems.Any())
{
    <div class="row">
        <div class="col-md-8">
            <h3>Order Summary</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Game</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>$@item.Price.ToString("F2")</td>
                            <td>@item.Quantity</td>
                            <td>$@((item.Price * item.Quantity).ToString("F2"))</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3">Total</th>
                        <th>$@Model.TotalPrice.ToString("F2")</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Payment Information</h5>
                    <p class="text-muted">This is a demo store. No actual payment will be processed.</p>

                    <form method="post">
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                            <label class="form-check-label" for="agreeTerms">
                                I agree to the terms and conditions
                            </label>
                        </div>

                        <button type="submit" class="btn btn-success btn-block">Place Order</button>
                    </form>
                </div>
            </div>

            <div class="mt-3">
                <a asp-page="/Cart" class="btn btn-secondary btn-block">Back to Cart</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>Your cart is empty</h4>
        <p>Add items to your cart before checking out.</p>
        <a asp-page="/Games/Index" class="btn btn-primary">Browse Games</a>
    </div>
}
@page "{id:int}"
@using AirWaterStore.Web.Helper
@model AirWaterStore.Web.Pages.Admin.Games.DeleteModel
@{
    ViewData["Title"] = "Delete Game";
}

<h1>Delete Game</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this game?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Game.Title</dd>

            <dt class="col-sm-3">Genre</dt>
            <dd class="col-sm-9">@(Model.Game.Genre ?? "N/A")</dd>

            <dt class="col-sm-3">Developer</dt>
            <dd class="col-sm-9">@(Model.Game.Developer ?? "N/A")</dd>

            <dt class="col-sm-3">Publisher</dt>
            <dd class="col-sm-9">@(Model.Game.Publisher ?? "N/A")</dd>

            <dt class="col-sm-3">Release Date</dt>
            <dd class="col-sm-9">@(Model.Game.ReleaseDate?.ToString("MMMM dd, yyyy") ?? "N/A")</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Game.Price.ToString("C", Currency.VnCurrencyFormat)</dd>

            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.Game.Quantity</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@(Model.Game.Description ?? "N/A")</dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Game.GameId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="/Games/Details" asp-route-id="@Model.Game.GameId" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.Game?.ThumbnailUrl))
        {
            <div class="card">
                <div class="card-header">
                    <h5>Game Thumbnail</h5>
                </div>
                <div class="card-body">
                    <img src="@Model.Game.ThumbnailUrl" class="img-fluid" alt="@Model.Game.Title" />
                </div>
            </div>
        }
    </div>
</div>
@page
@using AirWaterStore.Web.Helper
@model AirWaterStore.Web.Pages.CartModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-4 fw-bold mb-4">
                    <i class="fas fa-shopping-cart me-3"></i>Shopping Cart
                </h1>
                <p class="lead mb-0">Review your selected games and proceed to checkout</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    @if (Model.CartItems.Any())
    {
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="card shadow-custom border-0 mb-4">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0 fw-bold">
                            <i class="fas fa-list me-2 text-primary"></i>Cart Items (@Model.CartItems.Count)
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="cart-item p-4 border-bottom">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <h6 class="fw-bold mb-2">@item.Title</h6>
                                        <div class="d-flex align-items-center gap-4">
                                            <span class="h5 fw-bold text-gradient mb-0">
                                                @item.Price.ToString("C", Currency.VnCurrencyFormat)
                                            </span>
                                            <span class="text-muted">
                                                <i class="fas fa-tag me-1"></i>@item.Quantity x @item.Price.ToString("C", Currency.VnCurrencyFormat)
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <div class="d-flex align-items-center justify-content-end gap-2">
                                            <form method="post" class="d-inline">
                                                <input type="hidden" name="gameId" value="@item.GameId" />
                                                <div class="input-group input-group-sm" style="width: 120px;">
                                                    <input type="number" name="quantity" value="@item.Quantity" min="1" max="99" 
                                                           class="form-control text-center" />
                                                    <button type="submit" class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-sync-alt"></i>
                                                    </button>
                                                </div>
                                            </form>
                                            <form method="post" asp-page-handler="RemoveItem" class="d-inline">
                                                <input type="hidden" name="gameId" value="@item.GameId" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm" 
                                                        onclick="return confirm('Are you sure you want to remove this item?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Cart Actions -->
                <div class="d-flex gap-3">
                    <form method="post" asp-page-handler="ClearCart" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger" 
                                onclick="return confirm('Are you sure you want to clear your cart?')">
                            <i class="fas fa-trash me-2"></i>Clear Cart
                        </button>
                    </form>
                    <a asp-page="/Games/Index" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                    </a>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card shadow-custom border-0 sticky-top" style="top: 100px;">
                    <div class="card-header bg-gradient-primary text-white border-0 py-3">
                        <h5 class="mb-0 fw-bold">
                            <i class="fas fa-receipt me-2"></i>Order Summary
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between mb-3">
                            <span class="fw-semibold">Subtotal:</span>
                            <span class="fw-bold">@Model.TotalPrice.ToString("C", Currency.VnCurrencyFormat)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="fw-semibold">Tax:</span>
                            <span class="fw-bold">$0.00</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="h5 fw-bold">Total:</span>
                            <span class="h4 fw-bold text-gradient">@Model.TotalPrice.ToString("C", Currency.VnCurrencyFormat)</span>
                        </div>
                        
                        <div class="d-grid">
                            <a asp-page="/Checkout" class="btn btn-primary btn-lg">
                                <i class="fas fa-credit-card me-2"></i>Proceed to Checkout
                            </a>
                        </div>
                        
                        <div class="text-center mt-3">
                            <small class="text-muted">
                                <i class="fas fa-lock me-1"></i>Secure checkout powered by VnPay
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Empty Cart -->
        <div class="text-center py-5">
            <div class="bg-white p-5 rounded-custom shadow-custom">
                <i class="fas fa-shopping-cart fa-4x text-muted mb-4"></i>
                <h3 class="text-muted mb-3">Your cart is empty</h3>
                <p class="text-muted mb-4">Looks like you haven't added any games to your cart yet. Start shopping to discover amazing games!</p>
                <a asp-page="/Games/Index" class="btn btn-primary btn-lg">
                    <i class="fas fa-store me-2"></i>Browse Games
                </a>
            </div>
        </div>
    }
</div>

<!-- Features Section -->
@if (Model.CartItems.Any())
{
    <div class="container mt-5">
        <div class="row g-4">
            <div class="col-md-4 text-center">
                <div class="bg-white p-4 rounded-custom shadow-custom h-100">
                    <i class="fas fa-shipping-fast fa-2x text-primary mb-3"></i>
                    <h6 class="fw-semibold">Instant Delivery</h6>
                    <p class="text-muted small mb-0">Get your games immediately after purchase</p>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="bg-white p-4 rounded-custom shadow-custom h-100">
                    <i class="fas fa-shield-alt fa-2x text-primary mb-3"></i>
                    <h6 class="fw-semibold">Secure Payment</h6>
                    <p class="text-muted small mb-0">Multiple secure payment options available</p>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="bg-white p-4 rounded-custom shadow-custom h-100">
                    <i class="fas fa-headset fa-2x text-primary mb-3"></i>
                    <h6 class="fw-semibold">24/7 Support</h6>
                    <p class="text-muted small mb-0">We're here to help anytime</p>
                </div>
            </div>
        </div>
    </div>
}
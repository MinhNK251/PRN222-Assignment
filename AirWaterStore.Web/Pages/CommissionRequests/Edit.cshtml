@page "{id:int}"
@model AirWaterStore.Web.Pages.CommissionRequests.EditModel
@{
    ViewData["Title"] = "Edit Request";
}

<a asp-page="./Index" class="btn btn-secondary mb-3">
    <i class="fas fa-arrow-left"></i> Back
</a>

<div class="container mt-4">
    <h2>Edit Game Request</h2>

    <form method="post">
        <input type="hidden" asp-for="EditRequest.CommissionRequestId" />
        <input type="hidden" asp-for="EditRequest.ExpectedPrice" value="1" />

        <div class="mb-3">
            <label asp-for="EditRequest.GameTitle" class="form-label"></label>
            <input asp-for="EditRequest.GameTitle" class="form-control" />
            <span asp-validation-for="EditRequest.GameTitle" class="text-danger"></span>
        </div>

        @* <div class="mb-3">
            <label asp-for="EditRequest.ExpectedPrice" class="form-label"></label>
            <input asp-for="EditRequest.ExpectedPrice" class="form-control" />
            <span asp-validation-for="EditRequest.ExpectedPrice" class="text-danger"></span>
        </div> *@

        <div class="mb-3">
            <label asp-for="EditRequest.Description" class="form-label"></label>
            <textarea asp-for="EditRequest.Description" class="form-control"></textarea>
            <span asp-validation-for="EditRequest.Description" class="text-danger"></span>
        </div>

        @if (Model.IsStaff)
        {
            <div class="mb-3">
                <label asp-for="EditRequest.Status" class="form-label"></label>
                <select asp-for="EditRequest.Status" class="form-select">
                    <option value="Open">Open</option>
                    <option value="In Progress">In Progress</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
                <span asp-validation-for="EditRequest.Status" class="text-danger"></span>
            </div>
        }

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-page="./Details" asp-route-id="@Model.EditRequest.CommissionRequestId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
